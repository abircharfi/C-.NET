@model UserLogin 

<form asp-action="LoginUserForm" method="post" class="form-horizontal">
    
    <div class="form-group">
        <label for="LoginEmail" class="control-label">Email</label>
         <input asp-for="LoginEmail" class="form-control" value="abir@live.fe" />
       
        
    </div>
    <div class="form-group">
        <label for="LoginPassword" class="control-label">Password</label>
        <input asp-for="LoginPassword" class="form-control" value="12345678" />
       
    </div>
    <span asp-validation-for="LoginEmail" class="text-danger"></span>
     <span asp-validation-for="LoginPassword" class="text-danger"></span>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>