@model List<Product>

<div class="container">
    <h1>All Products</h1>

    @if(Model != null && Model.Any())
    {
        foreach(Product p in Model)
        {
            <div>
                <a href="product/@p.ProductId">@p.Name</a> 
            </div>
        }
    }
    else
    {
        <p>No products found.</p>
    }
</div>
