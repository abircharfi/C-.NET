@{
    ViewData["Title"] = "Home Page";
}
@model Dish

<div class="container mt-5 ">
    <form asp-action="Update" asp-controller="Home" method="post">
        <div class="form-row d-flex ">
          
               <div class="form-column p-3">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Chef"></label>
                    <input asp-for="Chef" class="form-control" />
                    <span asp-validation-for="Chef" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories" class="form-control" />
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
            </div>

           
            <div class="form-column p-3">
                <div class="form-group">
                    <label asp-for="Tastiness"></label>
                    <input asp-for="Tastiness" class="form-control" />
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                </div>
            </div>

           
            <div class="form-column p-3">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="DishId" />

                 <div class="form-group p-3">
                    <button type="submit" class="btn btn-primary">Edit Dish</button>
                </div>
            </div>
        </div>

        
    </form>
</div>
